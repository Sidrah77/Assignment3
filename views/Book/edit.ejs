<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<!-- Content for the edit Operation-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>
        <form class="form" method="POST">
        <!-- to add the name in the database -->
            <div class="form-group">
                <label for="nameTextField">date</label>
                <input type="text" class="form-control" id="productTextField" placeholder="Enter the date" name="date" value="<%=Workout.date%>" required>
            </div>
            <div class="form-group">
                <label for="authorTextField">duration</label>
                <input type="text" class="form-control" id="categoryTextField" placeholder="Enter the duration" name="duration" value="<%=Workout.duration%>" required>
            </div>
            <div class="form-group">
                <label for="publishedTextField">exercise</label>
                <input type="text" class="form-control" id="priceTextField" placeholder="Enter the exercise" name="exercise" value="<%=Workout.exercise%>" required>
            </div>
            <div class="form-group">
            <!-- it's text area because it takes more space -->
                <label for="descriptionTextArea">intensity</label>
                <input type="text" class="form-control" id="colorTextField" placeholder="Enter the intensity (high, moderate, low)" name="intensity" value="<%=Workout.intensity%>" required>
            </div>

            <button class="btn btn-primary" type="submit">Submit
            <i class="fas fa-edit"></i></button>

            <button class="btn btn-warning" type="submit">Cancel
            <i class="fas fa-undo"></i></button>

        </form> 
    </div>

</div>
<%- include ../Partials/footer.ejs %>